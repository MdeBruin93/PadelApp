@using PadelApp.Config
@using PadelApp.Services
@implements IDisposable

@inject ISchemeReleaseService SchemeReleaseService
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Familien padel app</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-people" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/rules">
                <span class="oi oi-people" aria-hidden="true"></span> Regels
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/crew">
                <span class="oi oi-people" aria-hidden="true"></span> Organisatie
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                @if (context.User.IsInRole(RoleConstants.Admin))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/poules">
                            <span class="oi oi-people" aria-hidden="true"></span> Poules
                        </NavLink>
                    </div>
                }

                @if (context.User.IsInRole(RoleConstants.Admin) || context.User.IsInRole(RoleConstants.Crew))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/matches">
                            <span class="oi oi-people" aria-hidden="true"></span> Speelschema
                        </NavLink>
                    </div>
                }

                @if (context.User.IsInRole(RoleConstants.Admin) || (SchemeReleaseService.BracketsReleased && context.User.IsInRole(RoleConstants.Crew)))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/upper-bracket">
                            <span class="oi oi-people" aria-hidden="true"></span> Upper Bracket
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/lower-bracket">
                            <span class="oi oi-people" aria-hidden="true"></span> Lower Bracket
                        </NavLink>
                    </div>
                }

                @if (context.User.IsInRole(RoleConstants.Player))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/my-matches">
                            <span class="oi oi-people" aria-hidden="true"></span> Mijn speelschema
                        </NavLink>
                    </div>
                }

                @if (context.User.IsInRole(RoleConstants.Admin))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/admin-ui">
                            <span class="oi oi-people" aria-hidden="true"></span> Admin UI
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/users">
                            <span class="oi oi-people" aria-hidden="true"></span> Users
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/audit">
                            <span class="oi oi-people" aria-hidden="true"></span> Audit log
                        </NavLink>
                    </div>
                }

                @* <div class="nav-item px-3"> *@
                @*     <span class="oi oi-people" aria-hidden="true"></span> @context.User.Identity?.Name *@
                @*     $1$ <NavLink class="nav-link" href="Account/Manage"> #1# *@
                @*     $1$      #1# *@
                @*     $1$ </NavLink> #1# *@
                @* </div> *@
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="oi oi-people" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                @* <div class="nav-item px-3"> *@
                @*     <NavLink class="nav-link" href="Account/Register"> *@
                @*         <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register *@
                @*     </NavLink> *@
                @* </div> *@
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

